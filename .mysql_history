CREATE TABLE messages (
id BIGINT AUTO_INCREMENT,
fromUser MEDIUMINT NOT NULL,
toUser MEDIUMINT NOT NULL,
message VARCHAR(1024),
sourceLang VARCHAR(2),
time_stamp DATETIME,
status ENUM ('read', 'unread'),
FOREIGN KEY (fromUser)
REFERENCES users(id),
FOREIGN KEY (toUSer)
REFERENCES users(id)
);
