CREATE TABLE messages2 (
id bigint not null auto_increment,
fromUser varchar(30) not null,
toUser varchar(30) not null,
message varchar(1024),
sourceLang varchar(5),
time_stamp datetime,
status enum('read', 'unread'),
primary key (id),
FOREIGN KEY (fromUser) REFERENCES users(name),
FOREIGN KEY (toUser) REFERENCES users(name)
) CHARACTER SET=utf8;
