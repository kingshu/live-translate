create table users (
id mediumint NOT NULL AUTO_INCREMENT,
name varchar (30) NOT NULL,
pin varchar (8) NOT NULL,
real_name varchar (50),
phone_number varchar(12),
gender enum('M','F','O'),
status varchar(50),
PRIMARY KEY (id),
UNIQUE KEY name (name)
) DEFAULT CHARSET=utf8;
create table users ( id mediumint NOT NULL AUTO_INCREMENT, name varchar (30) NOT NULL, pin varchar (8) NOT NULL, real_name varchar (50), phone_number varchar(12), gender enum('M','F','O'), status varchar(50), PRIMARY KEY (id), UNIQUE KEY name (name) ) DEFAULT CHARSET=utf8;
